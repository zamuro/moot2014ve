<% if current_usuario.admin? %>
<h1>Participantes que deben pagar recargos</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Voucher</th>
      <th>Monto</th>
      <th>Fecha</th>
      <th>Banco</th>
    </tr>
  </thead>

  <tbody>
    <% @pagos.each do |pago| %>
      <tr>
        <td><%= pago.usuario.email %></td>
        <td><%= pago.voucher %></td>
        <td><%= pago.monto %></td>
        <td><%= pago.fecha %></td>
        <td><%= pago.banco.banco %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else  %>
<%= render file: "inicio/prohibido" %>
<% end %>

<%= link_to 'New Pago', new_pago_path %>
