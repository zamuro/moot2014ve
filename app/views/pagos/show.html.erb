<h1>Estado de cuenta</h1>
	
<% if @pago.usuario_id == current_usuario.id || current_usuario.admin? %>
<h2>Hola, <%= @registro.nombre %>. Hasta ahora, estos son tus pagos</h2>
<table class="table table-striped table-hover ">
	<thead>
		<tr>
			<th>Voucher</th>
			<th>Monto</th>
			<th>Fecha</th>
			<th>Banco</th>
		</tr>
	</thead>
	<tbody>
	<% @fetch.each do |x| %>
		<tr>
			<td><%= x.voucher %></td>
			<td><%= x.monto %></td>
			<td><%= x.created_at %></td>
			<td><%= x.banco.banco %></td>
		</tr>
	</tbody>
	<% end %>
</table>
<% else %>
	<%= render file: "inicio/prohibido" %>
<% end %>

