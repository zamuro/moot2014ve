<% if current_usuario.admin? %>
<h1>Pagos Registrados</h1>
<%= link_to 'Descarga listado exportable a excel', pagos_path(format: :csv) %>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Correo</th>
      <th>Nombre</th>
      <th>Regi√≥n</th>
      <th>Distrito</th>
      <th>Grupo</th>
      <th>Voucher</th>
      <th>Monto</th>
      <th>Fecha</th>
      <th>Banco</th>
    </tr>
  </thead>

  <tbody>
    <% @pagos.each do |pago| %>
      <tr>
        <td><%= pago.usuario.email %></td>
        <td>
          <% if pago.datos_registro.present? %>
            <%= pago.datos_registro.nombre %>
          <% else %>
          <b>NO DISPONIBLE</b>
          <% end %>
        </td>
        <td>
          <% if pago.datos_registro.present? %>
            <%= pago.datos_registro.region.region %>
          <% else %>
          <b>NO DISPONIBLE</b>
          <% end %>
        </td>
        <td>
          <% if pago.datos_registro.present? %>
            <%= pago.datos_registro.distrito.distrito %>
          <% else %>
          <b>NO DISPONIBLE</b>
          <% end %>
        </td>
        <td>
          <% if pago.datos_registro.present? %>
            <%= pago.datos_registro.grupo.grupo %>
          <% else %>
          <b>NO DISPONIBLE</b>
          <% end %>
        </td>
        <td><%= pago.voucher %></td>
        <td><%= pago.monto %></td>
        <td><%= pago.fecha %></td>
        <td><%= pago.banco.banco %></td> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else  %>
<%= render file: "inicio/prohibido" %>
<% end %>

<%= link_to 'New Pago', new_pago_path %>
