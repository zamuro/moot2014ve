<h2>Registro de usuario</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= f.error_notification %>

<form class="form-horizontal">
	<fieldset>
		<div class="form-group">
			<div class="col-xs-10">
				<label class="col-xs-3">Correo</label>
				<%= f.text_field :email, :required => true, :autofocus => true %>
				<span class="help-block">Este será tu campo de usuario, y allí enviaremos notificaciones.</span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-xs-10">
				<label class="col-xs-3">Contraseña</label>
				<%= f.input_field :password, :required => true, :autofocus => true, :size => 20 %>
				<span class="help-block">Mínimo ocho (08) caracteres. Sensible a mayúsculas.</span>
			</div>	
		</div>
		<div class="form-group">
			<div class="col-xs-10">
				<label class="col-xs-3"> Confirma tu contraseña</label>
				<%= f.input_field :password_confirmation, :required => true, :autofocus => true %>
				<span class="help-block">Repite tu contraseña</span>
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-xs-10">
				<label class="col-xs-3"> Añade el rol</label>
				<%= f.collection_select :nivel_id, Nivel.all.order(:nivel), :id, :nivel %>
			</div>
		</div>

		<div class="form-group">
			<div class="col-xs-10">
				<%= f.button :submit, "Regístrate" %>
			</div>
		</div>
</fieldset>
</form>
		<% end %>


