<% if admin_signed_in? %>
  <h1>Datos de usuarios registrados</h1>

  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Cédula de Identidad</th>
        <th>Credencial</th>
        <th>Fecha de Nacimiento</th>
        <th>Región</th>
        <th>Distrito</th>
        <th>Grupo</th>
        <th>Rama</th>
        <th>Unidad</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @datos_registros.each do |datos_registro| %>
        <tr>
          <td><%= datos_registro.nombre %></td>
          <td><%= datos_registro.ci %></td>
          <td><%= datos_registro.credencial %></td>
          <td><%= datos_registro.fechaNac %></td>
          <td><%= datos_registro.region.region %></td>
          <td><%= datos_registro.distrito.distrito %></td>
          <td><%= datos_registro.grupo.grupo %></td>
           <% if admin_signed_in? %>
          <td><%= link_to 'Mostrar', datos_registro %></td>
          <td><%= link_to 'Editar', edit_datos_registro_path(datos_registro) %></td>
          <td><%= link_to 'Borrar', datos_registro, method: :delete, data: { confirm: 'Confirme. Esta acción no puede deshacerse' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Introduzca nuevos datos de usuario', new_datos_registro_path %>
  <%= link_to "Menú Principal", root_path %>
<% else %>
  <%= render file: "inicio/prohibido" %>
  <p><%= link_to "Menú Principal", root_path %></p>
<% end %>
