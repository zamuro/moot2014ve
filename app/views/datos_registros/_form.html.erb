  <div class="field">
    <%= f.label "Rama" %><br>
    <%= f.collection_select(:rama_id, Rama.all, :id, :rama, :prompt => true)%>
  </div>
  <div class="field">
    <%= f.label "Unidad" %><br>
    <%= f.collection_select(:unidad_id, Unidad.all, :id, :unidad, :prompt => true)%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
